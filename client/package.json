{
  "name": "nervatura-client",
  "description": "Business Management Application",
  "version": "5.2.2",
  "keywords": [
    "business management",
    "open-data",
    "customer",
    "employee",
    "product",
    "invoice",
    "order",
    "offer",
    "stock control",
    "payment",
    "inventory",
    "rental",
    "project",
    "express",
    "PDF reporting"
  ],
  "author": "Csaba Kappel <info@nervatura.com> (http://nervatura.com)",
  "license": "LGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nervatura/nervatura.git"
  },
  "bugs": {
    "url": "https://github.com/nervatura/nervatura/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": ".",
  "scripts": {
    "test": "web-test-runner --node-resolve --coverage",
    "test:watch": "web-test-runner --watch",
    "storybook": "npm run analyze -- --exclude dist && web-dev-server -c .storybook/server.mjs",
    "storybook:build": "npm run analyze -- --exclude dist && build-storybook",
    "build": "rimraf dist && rollup -c rollup.config.mjs --environment APP_CONFIG:SERVER && npm run analyze -- --exclude dist",
    "build:dev": "rimraf dist && rollup -c rollup.config.mjs --environment APP_CONFIG:DEV && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "web-dev-server",
    "coverage": "web-dev-server --root-dir coverage/lcov-report --port 1234 --open"
  },
  "dependencies": {
    "lit": "^2.8.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.8.4",
    "@open-wc/building-rollup": "^3.0.2",
    "@open-wc/eslint-config": "^12.0.0",
    "@open-wc/testing": "^3.2.0",
    "@rollup/plugin-replace": "^5.0.3",
    "@web/dev-server": "^0.3.2",
    "@web/dev-server-storybook": "^1.0.6",
    "@web/test-runner": "^0.17.1",
    "deepmerge": "^4.3.1",
    "eslint": "8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "prettier": "^3.0.3",
    "rimraf": "5.0.5",
    "rollup": "4.0.2",
    "rollup-plugin-copy": "^3.5.0",
    "sinon": "16.1.0"
  },
  "eslintConfig": {
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "packageDir": "./"
        }
      ],
      "no-nested-ternary": "off",
      "no-case-declarations": "off",
      "prefer-destructuring": "off",
      "camelcase": "off",
      "lit-a11y/click-events-have-key-events": "off",
      "lit/no-native-attributes": "off"
    },
    "plugins": [
      "chai-friendly"
    ],
    "extends": [
      "@open-wc",
      "prettier",
      "plugin:chai-friendly/recommended"
    ]
  },
  "prettier": {
    "singleQuote": false,
    "arrowParens": "avoid"
  },
  "customElements": "custom-elements.json"
}
